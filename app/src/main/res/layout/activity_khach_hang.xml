<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar_khach_hang">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edTimKiemNguoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/background_edit_search"
            android:drawableStart="@drawable/ic_loupe"
            android:drawableLeft="@drawable/ic_loupe"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Tìm kiếm tại đây"
            android:padding="8dp"
            android:textSize="18sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lvNguoiDung"
            style="@style/margin8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvKhongCoNguoiDung"
            style="@style/fontHienThi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:text="Không tìm thấy khách hàng nào"
            android:visibility="invisible" />
    </FrameLayout>
</LinearLayout>